#!/usr/bin/env perl 

# TODO: Change things to run as non-root

use FindBin;
use lib "$FindBin::Bin/../perl/";
use KBDeploy;
use strict;

my $cfg=read_config("$FindBin::Bin/../cluster.ini",'global');


my $me=`hostname`;
chomp $me;


my @sl=myservices($me);
exit unless scalar(@sl);

mkdocs(@sl);
exit if -e '/kb/deployment' && $ARGV[0] ne '-f';

stop_service(@sl);

deploy_service(@sl);

start_service(@sl);
